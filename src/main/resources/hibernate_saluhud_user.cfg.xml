<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">saluhud_user</property>
        <property name="hibernate.connection.password">userUHU495</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/saluhud</property>

        <property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>
        <property name="hibernate.c3p0.min_size">10</property>
        <property name="hibernate.c3p0.max_size">100</property>
        <property name="hibernate.c3p0.acquire_increment">5</property>

        <property name="hbm2ddl.auto">none</property>
        <property name="show_sql">true</property>

    </session-factory>
</hibernate-configuration>